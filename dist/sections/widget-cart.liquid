<script>
  window.Scoutside = window.Scoutside || {}
  window.Scoutside.cart = window.Scoutside.cart || {}
  
  var cart = {{ section.settings | json }}
  {% assign bloop = 0 %}
  {% for block in section.blocks %}
    cart['{{ block.type }}'] = cart['{{ block.type }}'] || []
    cart['{{ block.type }}'].push({{ block.settings | json }})
  {% endfor %}

  window.Scoutside.cart = cart
</script>

