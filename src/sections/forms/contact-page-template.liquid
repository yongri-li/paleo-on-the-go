<style>
  .contact-us {
    text-align: center;
  }

  .contact-us .contactFormWrapper {
    width: clamp(320px, 50vw, 920px);
    margin: 0 auto;
  }

  .contact-us .contactFormWrapper--header {
    display: grid;
    grid-template-columns: 1fr;
  }

  .contactFormWrapper--field p {
    text-align: left;
  }

  .contact-us__hero {
    color: #fefefe;
    min-height: 320px;
    display: flex;
    align-items: center;
    justify-content: center;    
  }

  @media only screen and (min-width: 993px) {
    .contact-us__hero h1 {
      color: #232323;
      background-color:#fefefe;
      padding: 1.5rem 2rem;
    }

    .contact-us .contactFormWrapper--header {
      grid-template-columns: repeat(3, 1fr);
    }    
  }

  @media only screen and (max-width: 992px) {
    #contactFormMessage {
      max-width: 320px;
      margin: 0 auto;
    }
  }
</style>

<article class="contact-us">
  <section class="contact-us__hero"
    style="background-image: url('{{section.settings.contact_bg_image | img_url: 'x450' }}')">
    <h1 class="c-h1">{{ section.settings.contact_hero_text }}</h1>
  </section>
  <div id="page" class="{% if section.settings.show_narrow_page %}desktop-8 desktop-push-2{% else %}desktop-12{% endif %} tablet-6 mobile-3" data-section-id="{{ section.id }}" data-section-type="page-section">
    <div id="page-content"{% if linklists[section.settings.pagelist] != blank %} class="desktop-9 tablet-4 mobile-3{% endif %}">
      <h2 class="page-title c-h2">{{ page.title }}</h2>
      <div class="rte">{{ page.content }}</div>
      <p style="text-align:center; font-size:18px;">
        Contact us Monday - Friday, 8AM - 4PM EST.<br/>
        Use the form below or call us at 855-447-2536
      </p>
      {% include 'contact' %}
    </div>

    {% if linklists[section.settings.pagelist] != blank %}
    <div id="page-sidebar" class="desktop-3 tablet-2 mobile-3">
      <h2>{{ section.settings.page_sidebar_title | escape }}</h2>
      <ul>
        {% for link in linklists[section.settings.pagelist].links %}
        <li>{{ link.title | link_to: link.url }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
</article>

{% schema %}
  {
    "name": "Page options",
    "settings": [
      {
        "type": "header",
        "content": "Contact Us Page"
      },       
      {
        "id": "contact_bg_image",
        "type": "image_picker",
        "label": "Background Image"
      }, 
      {
        "id": "contact_hero_text",
        "type": "text",
        "label": "Hero Heading",
        "default": "We're Here To Help"
      },           
      {
        "type": "checkbox",
        "id": "show_narrow_page",
        "label": "Reduced page width",
        "info": "For narrow pages"
      },
      {
        "type": "link_list",
        "id": "pagelist",
        "label": "Choose a menu for the page sidebar",
        "info": "When page full width only"
      },
      {
        "type": "text",
        "id": "page_sidebar_title",
        "label": "Page sidebar title",
        "default": "Page sidebar title",
        "info": "When sidebar menu chosen"
      }
    ]
  }
{% endschema %}
