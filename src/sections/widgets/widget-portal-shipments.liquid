<script>
  var shipments = {}

  shipments = {{ section.settings | json }}

  {% assign bloop = 0 %}
  {% for block in section.blocks %}
    shipments['{{ block.type }}'] = shipments['{{ block.type }}'] || []
    shipments['{{ block.type }}'].push({{ block.settings | json }})
  {% endfor %}

  window.Scoutside.portal.shipments = shipments
</script>

