<script>
  const gridAccordions = {}
  gridAccordions.blocks = []
  {% for block in section.blocks %}
    gridAccordions.blocks.push({
      ...JSON.parse(JSON.stringify({{ block.settings | json }}))
    })
  {% endfor %}

  window.Scoutside.foodsourcing.grid = gridAccordions
</script>


