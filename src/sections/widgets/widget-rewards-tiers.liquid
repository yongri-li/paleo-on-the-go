<script>
  const iconTiers = {}
  iconTiers.blocks = []

  {% for block in section.blocks %}
    iconTiers.blocks.push({
      ...JSON.parse('{{ block.settings | json }}')
    })
  {% endfor %}

  window.Scoutside.rewards.tiers = iconTiers
</script>

<style>
  {% for block in section.blocks %}
    .v-widget .lion-tier-box.{{block.settings.target}}::before {
      background-image: url('{{ block.settings.image_icon | img_url: '130x130'}}');
    }
  {% endfor %}
</style>

{% schema %}
  {
    "name": "Tiers Icons",
    "blocks": [
      {
        "type": "icon",
        "name": "ICON",
        "settings": [
          {
            "label": "Image Icon",
            "type": "image_picker",
            "id": "image_icon"
          },
          {
            "label": "Target",
            "type": "select",
            "id": "target",
            "options": [
              {
                "value": "lion-tier-box--0",
                "label": "Bronze"
              },
              {
                "value": "lion-tier-box--1",
                "label": "Silver"
              },
              {
                "value": "lion-tier-box--2",
                "label": "Gold"
              }
            ],
            "default": "lion-tier-box--0"
          }
        ]
      }
    ]
  }
{% endschema %}
