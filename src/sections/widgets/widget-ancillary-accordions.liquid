<script>
  window.Scoutside = window.Scoutside || {};
  window.Scoutside.ancillary = window.Scoutside.ancillary || {};

  let AncillaryAccordions = {}
  AncillaryAccordions.blocks = []
  {% for block in section.blocks %}
    AncillaryAccordions.blocks.push({
      ...JSON.parse('{{ block.settings | json }}')
    })
  {% endfor %}

  const titles = {{ section.settings | json }}
  AncillaryAccordions = { ...AncillaryAccordions, ...titles }

  window.Scoutside.ancillary.accordions = AncillaryAccordions

</script>


{% schema %}
  {
    "name": "Accordions Section",
    "max_blocks": 6,
    "settings": [
      {
        "id": "faqs_title",
        "type": "text",
        "label": "FAQ Title",
        "default": "Common Questions"
      }
    ],
    "blocks": [
      {
        "name": "FAQs",
        "type": "faq",
        "settings": [
          {
            "label": "Question",
            "type": "text",
            "id": "box_question"
          },
          {
            "label": "Answer",
            "type": "textarea",
            "id": "box_answer"
          }
        ]
      }
    ]
  }
{% endschema %}
