<article class="c-homeHero js-homepage">

  <section class="c-homeHero__ctaWrap">
    <h1 class="c-h1">{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <div class="u-spacer--md u-hideTabletDown"></div>
    <a href="https://www.target.com" target="_blank" class="c-button c-button--isDefault c-button--isPrimary c-button--lrg">
      {{section.settings.cta_text}}
    </a>
  </section>

  <section 
    class="c-homeHero__imgWrap"
    style="background-image: url('{{section.settings.bg_image | img_url: 'master' }}')">
  </section>

</article>

<marquee class="marquee" scrollamount="15">
  {% for block in section.blocks %}
    <span>{{ block.settings.marquee_word }}</span>
    <span class="circle-dot"></span>
  {% endfor %}
  {% for block in section.blocks %}
    <span>{{ block.settings.marquee_word }}</span>
    <span class="circle-dot"></span>
  {% endfor %}
</marquee>


<style>
  .shopify-section {
    position: relative;
  }
</style>

<script>
  document.addEventListener('scroll', e => {
    let scrollPosition = window.scrollY
    const header = document.querySelector('.c-header')

    scrollPosition > 0
    ? header.classList.add('scrolled')
    : header.classList.remove('scrolled')
  });  
</script>


{%- schema -%}
  {
    "name": "Hero Section",
    "settings": [
      {
        "id": "heading",
        "type": "text",
        "label": "Heading"
      },
      {
        "id": "subheading",
        "type": "text",
        "label": "Subheading"
      },
      {
        "id": "cta_text",
        "type": "text",
        "label": "CTA Text",
        "default": "Get Started"
      },      
      {
        "id": "cta_url",
        "type": "url",
        "label": "CTA URL"
      },
      {
        "id": "bg_image_mobile",
        "type": "image_picker",
        "label": "Background Image (Mobile)"
      },
      {
        "id": "bg_image",
        "type": "image_picker",
        "label": "Background Image (Desktop)"
      }      
    ],
    "blocks": [
        {
          "type": "text",
          "name": "Marquee Elements",
          "settings": [           
            {
              "id": "marquee_word",
              "type": "text",
              "label": "Marquee Word"
            }
          ]
        }
    ],
    "presets": [
      {
        "name": "Hero Section",
        "category": "Homepage"
      }
    ]
  }
{%- endschema -%}

