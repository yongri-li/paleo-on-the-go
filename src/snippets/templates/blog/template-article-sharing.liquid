<ul class="c-article_sharing">
    <li>
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: article.url }}" title="Share by Facebook">
        {% render 'icon-facebook' %}
        <span class="visually-hidden">Share on Facebook</span>
    </a>
    </li>

    <li>
    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ article.url | append: page.url }}" title="Share by Twitter">
        {% render 'icon-twitter' %}
        <span class="visually-hidden">Share on Twitter</span>
    </a>
    </li>

    <li>
    <a target="_blank" href="//www.linkedin.com/shareArticle?mini=true&url={{ shop.url | append: article.url }}" title="Share on LinkedIn">
        {% render 'icon-linkedin' %}
        <span class="visually-hidden">Share on LinkedIn</span>
    </a>
    </li>
</ul>